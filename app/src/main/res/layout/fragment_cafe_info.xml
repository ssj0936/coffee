<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.timothy.coffee.viewmodel.MainViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/common_context_padding"
            android:paddingEnd="@dimen/common_context_padding"
            android:paddingBottom="@dimen/common_context_padding">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.10" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.08" />

            <TextView
                android:id="@+id/cafe_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="@dimen/common_title_text_size"
                android:autoSizeMinTextSize="@dimen/common_title_text_size_min"

                android:autoSizeTextType="uniform"
                android:text="@{viewmodel.chosenCafe.name}"
                android:textAppearance="@style/CommonTitleStyle"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_context_text_size"
                android:text="@{String.valueOf(viewmodel.chosenCafe.address)}"
                android:textAppearance="@style/CommonSubtitleStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/cafe_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(viewmodel.chosenCafe.distance)}"
                android:textAppearance="@style/CommonSecondaryContextTextStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/address" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="M"
                android:textAppearance="@style/CommonSecondaryContextTextStyle"
                app:layout_constraintBottom_toBottomOf="@+id/distance"
                app:layout_constraintStart_toEndOf="@id/distance"
                app:layout_constraintTop_toTopOf="@+id/distance" />

            <!--seat-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_title_text_size"
                android:text="@string/label_seat_availability"
                android:textAppearance="@style/CommonPrimaryContextTextStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/distance" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rate_seat_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(viewmodel.chosenCafe.seatLevel)}"
                android:textAppearance="@style/RateNumberStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@+id/label_seat" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/total_score_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="/5"
                android:textAppearance="@style/RateTotalNumberStyle"
                app:layout_constraintBottom_toBottomOf="@+id/rate_seat_availability"
                app:layout_constraintStart_toEndOf="@id/rate_seat_availability" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewmodel.chosenCafe.seatLevel==0 ? View.GONE : View.VISIBLE}"
                app:constraint_referenced_ids="label_seat,total_score_seat,rate_seat_availability"/>

            <!--wifi-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_title_text_size"
                android:text="@string/label_wifi_stability"
                android:textAppearance="@style/CommonPrimaryContextTextStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/rate_seat_availability" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rate_wifi_stability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(viewmodel.chosenCafe.wifiStabilityLevel)}"
                android:textAppearance="@style/RateNumberStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@+id/label_wifi" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/total_score_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="/5"
                android:textAppearance="@style/RateTotalNumberStyle"
                app:layout_constraintBottom_toBottomOf="@+id/rate_wifi_stability"
                app:layout_constraintStart_toEndOf="@id/rate_wifi_stability" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewmodel.chosenCafe.wifiStabilityLevel==0 ? View.GONE : View.VISIBLE}"
                app:constraint_referenced_ids="label_wifi,total_score_wifi,rate_wifi_stability"/>

            <!--tasty-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_tasty_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_title_text_size"
                android:text="@string/label_tasty_level"
                android:textAppearance="@style/CommonPrimaryContextTextStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/rate_wifi_stability" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rate_tasty_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(viewmodel.chosenCafe.tastyLevel)}"
                android:textAppearance="@style/RateNumberStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@+id/label_tasty_level" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/total_score_tasty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="/5"
                android:textAppearance="@style/RateTotalNumberStyle"
                app:layout_constraintBottom_toBottomOf="@+id/rate_tasty_level"
                app:layout_constraintStart_toEndOf="@id/rate_tasty_level" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_tasty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewmodel.chosenCafe.tastyLevel==0 ? View.GONE : View.VISIBLE}"
                app:constraint_referenced_ids="label_tasty_level,total_score_tasty,rate_tasty_level"/>

            <!--quiet-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_quiet_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_title_text_size"
                android:text="@string/label_quiet_level"
                android:textAppearance="@style/CommonPrimaryContextTextStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/rate_tasty_level" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rate_quiet_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(viewmodel.chosenCafe.quietLevel)}"
                android:textAppearance="@style/RateNumberStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@+id/label_quiet_level" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/total_score_quiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="/5"
                android:textAppearance="@style/RateTotalNumberStyle"
                app:layout_constraintBottom_toBottomOf="@+id/rate_quiet_level"
                app:layout_constraintStart_toEndOf="@id/rate_quiet_level" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_quiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewmodel.chosenCafe.quietLevel==0 ? View.GONE : View.VISIBLE}"
                app:constraint_referenced_ids="label_quiet_level,total_score_quiet,rate_quiet_level"/>

            <!--price-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_price_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_title_text_size"
                android:text="@string/label_price_level"
                android:textAppearance="@style/CommonPrimaryContextTextStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/rate_quiet_level" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rate_price_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(viewmodel.chosenCafe.priceLevel)}"
                android:textAppearance="@style/RateNumberStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@+id/label_price_level" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/total_score_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="/5"
                android:textAppearance="@style/RateTotalNumberStyle"
                app:layout_constraintBottom_toBottomOf="@+id/rate_price_level"
                app:layout_constraintStart_toEndOf="@id/rate_price_level" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewmodel.chosenCafe.priceLevel==0 ? View.GONE : View.VISIBLE}"
                app:constraint_referenced_ids="label_price_level,total_score_price,rate_price_level"/>

            <!--music-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_music_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_title_text_size"
                android:text="@string/label_good_music_level"
                android:textAppearance="@style/CommonPrimaryContextTextStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/rate_price_level" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rate_music_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(viewmodel.chosenCafe.goodMusicLevel)}"
                android:textAppearance="@style/RateNumberStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@+id/label_music_level" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/total_score_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="/5"
                android:textAppearance="@style/RateTotalNumberStyle"
                app:layout_constraintBottom_toBottomOf="@+id/rate_music_level"
                app:layout_constraintStart_toEndOf="@id/rate_music_level" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewmodel.chosenCafe.goodMusicLevel==0 ? View.GONE : View.VISIBLE}"
                app:constraint_referenced_ids="label_music_level,total_score_music,rate_music_level"/>

            <!--is time limited-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_time_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_title_text_size"
                android:text="@string/label_is_time_limited"
                android:textAppearance="@style/CommonPrimaryContextTextStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/rate_music_level" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/content_time_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewmodel.chosenCafe.isTimeLimited == null ? String.valueOf(viewmodel.chosenCafe.isTimeLimited) :@string/no_data}"
                android:textAppearance="@style/RateNumberStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@+id/label_time_limit" />

            <!--is socket provided-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_socket_provide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_title_text_size"
                android:text="@string/label_is_socket_provide"
                android:textAppearance="@style/CommonPrimaryContextTextStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/content_time_limit" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/content_socket_provide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewmodel.chosenCafe.isSocketProvided == null ? String.valueOf(viewmodel.chosenCafe.isSocketProvided) :@string/no_data}"
                android:textAppearance="@style/RateNumberStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@+id/label_socket_provide" />

            <!--is time limited-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_standing_desk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_title_text_size"
                android:text="@string/label_is_standing_desk_available"
                android:textAppearance="@style/CommonPrimaryContextTextStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@id/content_socket_provide" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/content_standing_desk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewmodel.chosenCafe.isStandingDeskAvailable == null ? String.valueOf(viewmodel.chosenCafe.isStandingDeskAvailable) :@string/no_data}"
                android:textAppearance="@style/RateNumberStyle"
                app:layout_constraintStart_toStartOf="@id/guideline_vertical"
                app:layout_constraintTop_toBottomOf="@+id/label_standing_desk" />

            <Button
                android:id="@+id/btn_navigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_text_navigate"
                app:layout_constraintTop_toBottomOf="@id/content_standing_desk"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/common_title_text_size"
                android:layout_marginBottom="@dimen/common_context_padding"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</layout>