<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TastyRatingBarTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/ratingStarActive</item>
    </style>

    <style name="TastyRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/tasty_rating_bar_stars</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
        <!-- full icon tint -->
        <item name="android:progressTint">@color/rate_yellow</item>
        <!-- unfull icon tint -->
        <item name="android:secondaryProgressTint">@color/rate_yellow_alpha</item>
        <!-- stroke tint -->
        <item name="android:progressBackgroundTint">@color/rate_yellow_alpha</item>
    </style>

    <style name="CommonButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="WhiteColorButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/gray</item>
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:backgroundTint">@color/divider_cafe_info_color</item>
    </style>


</resources>