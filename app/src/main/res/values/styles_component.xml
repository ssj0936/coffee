<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TastyRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/tasty_rating_bar_stars</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
        <!-- full icon tint -->
        <item name="android:progressTint">@color/rate_yellow</item>
        <!-- unfull icon tint -->
        <item name="android:secondaryProgressTint">@color/rate_yellow_alpha</item>
        <!-- stroke tint -->
        <item name="android:progressBackgroundTint">@color/rate_yellow_alpha</item>
    </style>

    <style name="CommonButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="ButtonOutlinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/common_primary_context_text_color</item>
<!--        <item name="backgroundTint">@color/filter_toggle_button_bg_color</item>-->

<!--        <item name="android:textAppearance">@style/CommonPrimaryContextTextStyle</item>-->
<!--        <item name="android:colorButtonNormal">@color/white</item>-->
<!--        <item name="android:elevation">5dp</item>-->
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_cafe_info_color</item>
        <item name="android:alpha">.2</item>
<!--        <item name="android:backgroundTint">@color/divider_cafe_info_color</item>-->
    </style>


</resources>