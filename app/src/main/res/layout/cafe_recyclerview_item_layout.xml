<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"></import>
        <variable
            name="cafeinfo"
            type="com.timothy.coffee.data.model.Cafenomad" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:cardElevation="10dp"
        app:contentPadding="5dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

            <TextView
                android:id="@+id/cafe_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:text="@{cafeinfo.name}"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toTopOf="@id/cafe_distance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tasty_rating"/>


            <TextView
                android:id="@+id/cafe_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{cafeinfo.distance+` M`}"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cafe_name"
                app:layout_constraintEnd_toStartOf="@id/tasty_rating"/>

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/tasty_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:rating="@{Float.parseFloat(String.valueOf(cafeinfo.tastyLevel))}"
                android:max="5"
                android:numStars="5"
                android:stepSize=".5"
                android:theme="@style/TastyRatingBarTheme"
                style="@style/TastyRatingBarStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="@{cafeinfo.tastyLevel==0 ? View.GONE : View.VISIBLE}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>